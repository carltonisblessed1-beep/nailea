        ">
          <h1>
            You made my heart smile ü§ç<br><br>
            I release this to God.<br>
            I trust You with her, and with me.<br>
            This is offered, not held.
          </h1>
        </div>
      `;
    }

    function moveNo() {
      const noBtn = document.getElementById("no");
      const x = Math.random() * 200 - 100;
      const y = Math.random() * 200 - 100;
      noBtn.style.transform = `translate(${x}px, ${y}px)`;
    }
